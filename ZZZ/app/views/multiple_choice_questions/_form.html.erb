<%= form_for @multiple_choice_question, :html => { :multipart => true, :class => "form-horizontal", :role => "form" } do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <!-- display multiple choice question form -->
  <div class="row">
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :question, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :option_1, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.text_field :option_1, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :option_2, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.text_field :option_2, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :option_3, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.text_field :option_3, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :option_4, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.text_field :option_4, :class => 'form-control' %>
      </div>
    </div>
    </br>
    <div class="row">
      <div class="col-md-4 col-sm-8">
        <%= f.label :answer, :class => 'col-sm-3 col-md-3 control-label' %>
      </div>
      <div class="col-md-4 col-sm-8">
        <%= f.radio_button :answer, 'option_1' %> Option 1
        <%= f.radio_button :answer, 'option_2' %> Option 2    
        <%= f.radio_button :answer, 'option_3' %> Option 3    
        <%= f.radio_button :answer, 'option_4' %> Option 4
      </div>
    </div>

    <!-- function calls to create and edit the question -->
  <div class="row">
    <div class="col-md-4 col-sm-8 pull-right">
      <%if @_controller.action_name == 'new'%>
      <%= f.submit "Create Question", :class => 'btn btn-primary' %>
      <%elsif @_controller.action_name == 'edit'%>
      <%= f.submit "Update Question", :class => 'btn btn-primary' %>
      <%end %>
    </div>
  </div>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
<% end %>
