<div class="page-header">
  <h2>Tests</h2>
</div>

<table class="table table-bordered table-hover">
  <tbody>
    <% @tests.each_with_index do |test,index| %>
    <tr>
      <td>
        <%= link_to test.test_name, test %>
      </td>
      <td>
        <%= button_to "Activate", activate_test_tests_path, method: :get, params: {test_id: test.id}, :class => 'btn btn-large btn-primary'%>
      </td>
      <td>
        <%= button_to "Deactivated", deactivate_test_tests_path, method: :get, params: {test_id: test.id}, :class => 'btn btn-large btn-warning'%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
