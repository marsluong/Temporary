<div class="container">
  <div class="col-md-8 well">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :role, :value => "student" %>
      <div class="row">
        <div class="form-group">
          <%= f.label :name, :class => 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :name, autofocus: true, :class => "form-control" %>
            <br/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <%= f.label :email, :class => 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.email_field :email, :class => "form-control" %>
            <br/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <%= f.label :password, :class => 'col-md-3 control-label' %>
          <em>
            (minimum Eight Charectors)
          </em>
          <div class="col-md-9">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            <br/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <%= f.label :password_confirmation, :class => 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            <br/>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", :class => "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
