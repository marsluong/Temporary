<div class="page-header">
  <h3>
    <%= link_to @test.test_name, @test %>
  </h3>
</div>

<%if @test.status != "completed"%>
<div class="row">
  
  <div class="col-md-6 col-sm-6 pull-right">

      <%= button_to "Create Multiple Choice Question", new_multiple_choice_question_path, method: :get, params: {test_id: @test.id} , "onclick" => "createQuestion()", "id" => "button", :class => 'btn btn-primary'%>
    </div>

  <div class="col-md-6 col-sm-6 pull-left">

      <%= button_to "Create Descriptive Question", new_descriptive_question_path, method: :get, params: {test_id: @test.id} , "onclick" => "createQuestion()", "id" => "button", :class => 'btn btn-primary'%>
  </div>
</div>
<%end %>


<div class="row">
  <% @multiple_choice_questions.each do |mcq| %>
  <p>
    <strong>Question:</strong>
    <%= mcq.description %>
  </p>

<%= image_tag mcq.image.url(:medium) %>

  <p>
    <strong>Option 1:</strong>
    <%= mcq.option_1 %>
  </p>

  <p>
    <strong>Option 2:</strong>
    <%= mcq.option_2 %>
  </p>

  <p>
    <strong>Option 3:</strong>
    <%= mcq.option_3 %>
  </p>

  <p>
    <strong>Option 4:</strong>
    <%= mcq.option_4 %>
  </p>
  </br>
  <p>
    <strong>Answer:</strong>
    <%= mcq.answer %>
  </p>

  <%if @test.status != "completed"%>
  <div class="col-md-6 col-sm-6 pull-right">
    <%= button_to "Edit Question", edit_multiple_choice_question_path(mcq), method: :get, params: {page: params[:page]}, :class => 'btn btn-primary'%>
  </div>
  <% end %>
  <% end %>
  <%= will_paginate @multiple_choice_questions %>
</div>


<div class="row">
  <% @descriptive_questions.each do |des| %>
  <p>
    <strong>Question:</strong>
    <%= des.description %>
  </p>

<%= image_tag des.image.url(:medium) %>

  </br>
  <p>
    <strong>Answer:</strong>
    <%= des.answer %>
  </p>

  <%if @test.status != "completed"%>
  <div class="col-md-6 col-sm-6 pull-right">
    <%= button_to "Edit Question", edit_descriptive_question_path(des), method: :get, params: {page: params[:page]}, :class => 'btn btn-primary'%>
  </div>
  <% end %>
  <% end %>
  <%= will_paginate @descriptive_questions %>
</div>
