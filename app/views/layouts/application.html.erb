<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>SeedPod3</title>
  </head>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <body>
    <%= render "shared/banner" %>
    <% if current_user.present?  %>
      <div class="col-md-2">
        <%= render "shared/side_bar" %>
      </div>
      <div class="col-md-10">
        <div class="container">
          <div>
            <section>
              <% flash.each do |key, value| %>
                <div class="<%= flash_alert_class(key) %>" id="div">
                  <button class="close" data={dismiss="alert"} type="button">, "aria-hidden".to_sym="true" 
                    &times;
                  </button>
                  <%= raw value %>
                </div>
              <% end %>
            </section>
          </div>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
